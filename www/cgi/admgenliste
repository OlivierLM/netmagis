#!%TCLSH%

#
# Select one or more DNS zones in order to force generation
#
# Called by: admin
#
# Parameters (form or url): none
#
# History
#   2002/05/23 : pda/jean : design
#   2002/07/09 : pda      : add nologin
#   2003/05/13 : pda/jean : use auth base
#   2010/12/06 : pda      : i18n
#

#
# Template pages used by this script
#

set conf(page)		admgenliste.html

#
# Next actions
# 

set conf(next)		"admgenset"

#
# Netmagis general library
#

source %LIBDNS%

# ::webapp::cgidebug ; exit


##############################################################################
# Main procedure
##############################################################################

proc main {} {
    global conf

    #
    # Initialization
    #

    d init-cgi "admin" "admin" {} ftab dbfd tabuid

    #
    # Get zone list
    #

    set lz [::pgsql::getcols $dbfd dns.zone "" "domaine ASC" {domaine domaine}]
    set h [llength $lz]
    set zones [::webapp::form-menu zones $h 1 $lz {}]

    #
    # End of script: output page and close database
    #

    d urlset "%URLFORM%" $conf(next) {}
    d result $conf(page) [list \
				[list %ZONES% $zones] \
			    ]
}

::webapp::cgi-exec main $debug
