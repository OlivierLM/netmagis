#!%TCLSH%

#
# Select a group to modify
#
# Called by: admin
#
# Parameters (form or url): none
#
# History
#   2002/05/21 : pda/jean : design
#   2002/07/09 : pda      : add nologin
#   2003/05/13 : pda/jean : use auth base
#   2010/12/06 : pda      : i18n
#

#
# Template pages used by this script
#

set conf(page)		admgrpsel.html

#
# Next actions
# 

set conf(next)		"admgrpedit"

#
# Netmagis general library
#

source %LIBDNS%

# ::webapp::cgidebug ; exit


##############################################################################
# Main procedure
##############################################################################

proc main {} {
    global conf

    #
    # Initialization
    #

    ::dnscontext create d
    d init-cgi "admin" "admin" {} ftab dbfd tabuid

    #
    # Get group list and convert it to a menu
    #

    set lgroup [::pgsql::getcols $dbfd "global.groupe" "nom <> ''" "nom ASC" \
						{nom nom}]
    set lgroup [linsert $lgroup 0 [list "::nouveau" [mc "Create group..."]]]
    set menuorggrp [::webapp::form-menu orggrp 1 0 $lgroup {0}]

    #
    # End of script: output page and close database
    #

    d urlset "%URLFORM%" $conf(next) {}
    d result $conf(page) [list \
				[list %MENUORGGRP% $menuorggrp] \
			    ]
}

::webapp::cgi-exec main $debug
