#!%TCLSH%

#
# Display administration operations
#
# Called by: accueil
#
# Parameters (form or url): none
#
# History
#   2001/03/22 : pda      : design
#   2001/10/20 : pda      : use output procedure
#   2002/05/03 : pda/jean : re-use in netmagis
#   2002/07/09 : pda      : add nologin
#   2003/05/13 : pda/jean : use auth base
#   2010/12/06 : pda      : i18n
#

#
# Template pages used by this script
#

set conf(err)		erreur.html
set conf(page)		admin.html

#
# Netmagis general library
#

source %LIBDNS%

# ::webapp::cgidebug ; exit

##############################################################################
# Main procedure
##############################################################################

proc main {} {
    global conf

    #
    # Initialization
    #

    ::dnscontext create d
    d init-cgi "admin" $conf(err) "admin" {} ftab dbfd tabuid

    #
    # URL and substitution list building
    #

    foreach script {consultmx statcor statetab consultnet listecorresp
			corresp admrelsel admmxsel admgrpsel
			admgenliste admparliste topotop} {
	set up [string toupper $script]
	d urlset "%URL$up%" "$script" {}
    }
    foreach ref {etabl commu hinfo reseau domaine zone zone4 zone6 dhcpprofil vlan eq eqtype} {
	set up [string toupper $ref]
	set args [list [list "type" $ref]]
	d urlset "%URLREF$up%" "admrefliste" $args
    }

    #
    # End of script: output page and close database
    #

    d result $conf(page) {}
}

::webapp::cgi-exec main $debug
