#!%TCLSH%

#
# Select a domain for which mail relay are to be modified
#
# Called by: admin
#
# Parameters (form or url): none
#
# History
#   2004/03/04 : pda/jean : design
#   2010/12/09 : pda      : i18n
#

#
# Template pages used by this script
#

set conf(err)		erreur.html
set conf(page)		admrelsel.html

#
# Next actions
# 

set conf(next)		"admreledit"

#
# WebDNS general library
#

source %LIBDNS%

# ::webapp::cgidebug ; exit

##############################################################################
# Main procedure
##############################################################################

proc main {} {
    global conf

    #
    # Initialization
    #

    ::dnscontext create d
    d init-cgi "admin" $conf(err) "admin" {} ftab dbfd login tabuid

    #
    # Get domains authorized for the user
    #

    set w "dr_dom.rolemail <> 0"
    set domain [menu-domain $dbfd $tabuid(idcor) "domaine" $w ""]

    #
    # End of script: output page and close database
    #

    d urlset "%URLFORM%" $conf(next) {}
    d result $conf(page) [list \
				[list %DOMAINE% $domain] \
			    ]
}

::webapp::cgi-exec main $debug
