#!%TCLSH%

#
# Ask for MX consultation parameters
#
# Called by: admin
#
# Parameters (form or url): none
#
# History
#   2002/05/25 : pda      : design
#   2002/07/09 : pda      : add nologin
#   2003/05/13 : pda/jean : use auth base
#   2010/12/10 : pda      : i18n
#

#
# Template pages used by this script
#

set conf(page)		consultmx.html

#
# Next actions
# 

set conf(next)		"listemx"

#
# Netmagis general library
#

source %LIBDNS%

# ::webapp::cgidebug ; exit

##############################################################################
# Main procedure
##############################################################################

proc main {} {
    global conf

    #
    # Initialization
    #

    ::dnscontext create d
    d init-cgi "admin" "admin" {} ftab dbfd tabuid

    #
    # Extract domain list (all)
    #

    set ld [::pgsql::getcols $dbfd dns.domaine "" "nom ASC" {nom nom}]
    set h [llength $ld]
    set listedomaines [::webapp::form-menu domaine $h 1 $ld {}]

    #
    # End of script: output page and close database
    #

    d urlset "%URLFORM%" $conf(next) {}
    d result $conf(page) [list \
				[list %LISTEDOMAINES% $listedomaines] \
			    ]
}

::webapp::cgi-exec main $debug
