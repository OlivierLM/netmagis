set conf(vlan:return) "Return to Vlan modification"
set conf(vlan:form)		form-vlan
set conf(vlan:spec)		{vlanid descr voip}
set conf(vlan:idnum)		vlanid
set conf(vlan:table)		topo.vlan

set conf(eqtype:return) "Return to equipment type modification"
set conf(eqtype:form)		form-eqtype
set conf(eqtype:spec)		{type}
set conf(eqtype:idnum)		idtype
