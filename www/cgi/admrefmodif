	{nom[0-9]+		0 9999}
	{localisation[0-9]+	0 9999}
	{adr4[0-9]+		0 9999}
	{gw4[0-9]+		0 9999}
	{dhcp[0-9]+		0 9999}
	{adr6[0-9]+		0 9999}
	{gw6[0-9]+		0 9999}
	{idetabl[0-9]+		0 9999}
	{idcommu[0-9]+		0 9999}
	{commentaire[0-9]+	0 9999}

	{nomn[0-9]+		1 9999}
	{localisationn[0-9]+	1 9999}
	{adr4n[0-9]+		1 9999}
	{gw4n[0-9]+		1 9999}
	{dhcpn[0-9]+		0 9999}
	{adr6n[0-9]+		1 9999}
	{gw6n[0-9]+		1 9999}
	{idetabln[0-9]+		1 9999}
	{idcommun[0-9]+		1 9999}
	{commentairen[0-9]+	1 9999}
}

set conf(form-domaine) {
	{nom[0-9]+		0 9999}
	{nomn[0-9]+		1 9999}
}

set conf(form-zone) {
	{domaine[0-9]+		0 9999}
	{prologue[0-9]+		0 9999}
	{rrsup[0-9]+		0 9999}
	{selection[0-9]+	0 9999}

	{domainen[0-9]+		1 9999}
