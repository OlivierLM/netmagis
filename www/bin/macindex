#!%TCLSH%


#
# Script pour définir l'accueil du module Mac
#
# Called by: index.htgt
#
# Parameters (form or url): none
#
# History
#   2010/11/30 : pda/jean : design
#


#
#


#
# Template pages used by this script
#

set conf(err)		erreur.html
set conf(page)		macindex.html

#
#

source %LIBDNS%

#
#

# ::webapp::cgidebug ; exit


##############################################################################
# Main procedure
##############################################################################

proc main {} {
    global conf

    #
    # Initialization
    #

    ::dnscontext create d
    d init-cgi "mac" $conf(err) "droitmac" {} ftab dbfd login tabuid

    #
    # Construction des URL et de la liste de subsitution
    #

    foreach script {mac ipinact macstat} {
	set up [string toupper $script]
	d urlset "%URL$up%" "%HOMEURL%/bin/$script" {}
    }

    #
    # End of script: output page and close database
    #

    d result $conf(page) {}
}

::webapp::cgi-exec main %DEBUG%
