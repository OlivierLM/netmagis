#!%TCLSH%


#
# Script pour présenter la page d'accueil de la gestion des rôles
#
# Called by: index.htgt
#
# Parameters (form or url): none
#
# History
#   2004/02/06 : pda/jean : design
#


#
#


#
# Template pages used by this script
#

set conf(page)		mail.html
set conf(err)		erreur.html

#
# Next actions
# 

set conf(next)		"%HOMEURL%/bin/mailheberg"

#
#

lappend auto_path %PKGTCL%
package require webdns

#
#

# ::webapp::cgidebug ; exit


##############################################################################
# Main procedure
##############################################################################

proc main {} {
    global conf

    #
    # Initialization
    #

    ::dnscontext create d
    d init-cgi "dns" $conf(err) "" {} ftab dbfd login tabuid

    #
    # Récupération des domaines pour lesquels le correspondant peut
    # déclarer des "rôles mail".
    #

    set w "dr_dom.rolemail <> 0"
    set domaine    [menu-domain $dbfd $tabuid(idcor) domaine $w ""]

    #
    # End of script: output page and close database
    #

    d urlset "%URLFORM%" $conf(next) {}
    d result $conf(page) [list \
				[list %DOMAINE% $domaine] \
			    ]
}

::webapp::cgi-exec main %DEBUG%
