#!%TCLSH%


#
# Script pour présenter la page de suppression d'une machine
#
# Called by: index.htgt
#
# Parameters (form or url): none
#
# History
#   2002/04/11 : pda/jean : design
#   2002/05/03 : pda/jean : séparation dans une page particulière
#   2002/07/09 : pda      : add nologin
#   2003/05/13 : pda/jean : use auth base
#


#
#


#
# Template pages used by this script
#

set conf(err)		erreur.html
set conf(page)		suppr.html

#
# Next actions
# 

set conf(next)		"%HOMEURL%/bin/traitesuppr"

#
#

source %LIBDNS%

#
#

# ::webapp::cgidebug ; exit


##############################################################################
# Main procedure
##############################################################################

proc main {} {
    global conf

    #
    # Initialization
    #

    ::dnscontext create d
    d init-cgi "dns" $conf(err) "" {} ftab dbfd login tabuid

    #
    # Récupération des domaines auxquels le correspond a accès
    # et construction du code HTML approprié.
    #

    set domaine [menu-domain $dbfd $tabuid(idcor) domaine "" ""]

    #
    # End of script: output page and close database
    #

    d urlset "%URLFORM%" $conf(next) {}
    d result $conf(page) [list \
				[list %DOMAINE% $domaine] \
			    ]
}

::webapp::cgi-exec main %DEBUG%
