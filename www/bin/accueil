#!%TCLSH%


#
# Script pour définir l'accueil général du module
#
# Appelé par : /applis/dns/
#
# Paramètres (formulaire ou URL) : aucun
#
# Historique
#   2002/06/03 : pda      : création
#   2002/07/09 : pda      : ajout de nologin
#   2003/05/13 : pda/jean : utilisation de la base d'authentification
#

set conf(homeurl)	%HOMEURL%

#
# Chemins utilisés par les scripts
#

set conf(lib)		%DESTDIR%/lib
set conf(libdns)	$conf(lib)/libdns.tcl

#
# Définition des noms des pages "à trous"
#

set conf(err)		$conf(lib)/erreur.html
set conf(page)		$conf(lib)/accueil.html

#
# Les outils du parfait concepteur de pages Web dynamiques...
#

lappend auto_path %PKGTCL%
package require webapp
package require pgsql

#
# On y va !
#

# ::webapp::cgidebug ; exit

source $conf(libdns)

##############################################################################
# Programme principal
##############################################################################

proc main {} {
    global conf

    #
    # Initialisation
    #

    ::dnscontext create d
    d init-cgi "dns" $conf(err) "" {} ftab dbfd login tabcor

    #
    # Construction des URL et de la liste de subsitution
    #

    foreach script {consulter ajout modif suppr droits mail web dhcp corresp} {
	set up [string toupper $script]
	d urlset "%URL$up%" "%HOMEURL%/bin/$script" {}
    }
    d urlset "%URLOUSUISJE%" "%HOMEURL%/bin/corresp" [list [list "critere" "_"]]

    #
    # Fin du script : sortie de la page et fermeture de la base
    #

    d result $conf(page) {}
}

::webapp::cgi-exec main %DEBUG%
