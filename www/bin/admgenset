#!%TCLSH%

#
# Script to force generation of one or more DNS zones
#
# Called by: admgenliste
#
# Parameters (form or url):
#	- zones : list of zone names
#
# History
#   2002/05/23 : pda/jean : design
#   2002/07/09 : pda      : add nologin
#   2003/05/13 : pda/jean : use auth base
#   2007/10/25 : jean     : log modify actions
#   2010/12/06 : pda      : i18n
#

#
# Template pages used by this script
#

set conf(err)		erreur.html
set conf(page)		admgenset.html

#
# Script parameters
#

set conf(form)	{
    {zones		0 9999}
}

#
# WebDNS general library
#

source %LIBDNS%

# ::webapp::cgidebug ; exit


##############################################################################
# Main procedure
##############################################################################

proc main {} {
    global conf

    #
    # Initialization
    #

    ::dnscontext create d
    d init-cgi "admin" $conf(err) "admin" $conf(form) ftab dbfd login tabuid

    #
    # Force generation
    #

    if {! [::pgsql::lock $dbfd {dns.zone} msg]} then {
	d error "Transaction impossible : $msg"
    }

    foreach z $ftab(zones) {
	set qz [::pgsql::quote $z]
	set sql "UPDATE zone SET generer = 1 WHERE domaine = '$qz'"
	if {! [::pgsql::execsql $dbfd $sql msg]} then {
	    ::pgsql::unlock $dbfd "abort" m
	    d error [format [mc {Error for zone '%1$s': %2$s}] $z $msg]
	}
    }

    if {! [::pgsql::unlock $dbfd "commit" msg]} then {
	::pgsql::unlock $dbfd "abort" m
	d error [format [mc "Operation failed (%s). Abort."] $msg]
    }

    d writelog "forcegeneration" "zones $ftab(zones)"

    #
    # End of script: output page and close database
    #

    d result $conf(page) {}
}

::webapp::cgi-exec main %DEBUG%
