#!%TCLSH%


#
# Script pour demander les paramètres de consultation des réseaux.
#
# Called by: admin.htgt
#
# Parameters (form or url): none
#
# History
#   2002/10/24 : pda      : design
#   2003/05/13 : pda/jean : use auth base
#   2004/01/20 : pda/jean : conversion ipv6
#


#
#


#
# Template pages used by this script
#

set conf(err)		erreur.html
set conf(page)		consultnet.html

#
# Next actions
# 

set conf(next)		"%HOMEURL%/bin/listenet"

#
#

source %LIBDNS%

#
#

# ::webapp::cgidebug ; exit


##############################################################################
# Main procedure
##############################################################################

proc main {} {
    global conf

    #
    # Initialization
    #

    ::dnscontext create d
    d init-cgi "dns" $conf(err) "" {} ftab dbfd login tabuid

    #
    # Extraire la liste des établissements et des communautés
    # et en faire des listes à choix multiples.
    #

    set le [::pgsql::getcols $dbfd dns.etablissement "" "nom ASC" {idetabl nom}]
    set h [llength $le]
    set listeetabl [::webapp::form-menu etabl $h 1 $le {}]

    set lc [::pgsql::getcols $dbfd dns.communaute "" "nom ASC" {idcommu nom}]
    set h [llength $le]
    set listecommu [::webapp::form-menu commu $h 1 $lc {}]

    #
    # Liste des critères de tri
    #

    set tri {
		{adr4		{Adresse IPv4}}
		{adr6		{Adresse IPv6}}
		{nom		Intitulé}
		{etablissement	Établissement}
		{communaute	Communauté}
		{localisation	Localisation}
		{commentaire	Commentaire}
	    }
    set menutri1 [::webapp::form-menu tri1 1 0 $tri 0]
    set menutri2 [::webapp::form-menu tri2 1 0 $tri 1]

    #
    # End of script: output page and close database
    #

    d urlset "%URLFORM%" $conf(next) {}
    d result $conf(page) [list \
				[list %LISTEETABL% $listeetabl] \
				[list %LISTECOMMU% $listecommu] \
				[list %MENUTRI1% $menutri1] \
				[list %MENUTRI2% $menutri2] \
			    ]
}

::webapp::cgi-exec main %DEBUG%
