    \titre {1} {Paramètres de l'application}

    \titre {2} {\ancre {datefmt} {Format d'affichage des dates/heures}}

	Format d'affichage des dates et des heures, utilisé dans
	l'édition et l'affichage des données. Ce format est utilisé
	par la commande Tcl clock(n), et plus de détails peuvent
	être trouvés dans la page de manuel correspondante. La
	liste ci-dessous (extraite de la page de manuel) reprend
	les principaux paramètres de format.

	\retrait {
	    \tableau {
		\bordure {1}
		\taille {100}
	    } {
		\casedefauttableau {\centragehorizontal {LEFT}}
		\casedefauttableau {\centragehorizontal {LEFT}}
	    } {
		\lignetableau {
		    \casetableau {} {%%}
		    \casetableau {} {Insert a %.}
		}
		\lignetableau {
		    \casetableau {} {%a}
		    \casetableau {} {Abbreviated weekday name (Mon, Tue, etc.).}
		}
		\lignetableau {
		    \casetableau {} {%A}
		    \casetableau {} {Full weekday name (Monday, Tuesday, etc.).}
		}
		\lignetableau {
		    \casetableau {} {%b}
		    \casetableau {} {Abbreviated month name (Jan, Feb, etc.).}
		}
		\lignetableau {
		    \casetableau {} {%B}
		    \casetableau {} {Full month name.}
		}
		\lignetableau {
		    \casetableau {} {%c}
		    \casetableau {} {Locale specific date and time.}
		}
		\lignetableau {
		    \casetableau {} {%d}
		    \casetableau {} {Day of month (01 - 31).}
		}
		\lignetableau {
		    \casetableau {} {%H}
		    \casetableau {} {Hour in 24-hour format (00 - 23).}
		}
		\lignetableau {
		    \casetableau {} {%I}
		    \casetableau {} {Hour in 12-hour format (00 - 12).}
		}
		\lignetableau {
		    \casetableau {} {%j}
		    \casetableau {} {Day of year (001 - 366).}
		}
		\lignetableau {
		    \casetableau {} {%m}
		    \casetableau {} {Month number (01 - 12).}
		}
		\lignetableau {
		    \casetableau {} {%M}
		    \casetableau {} {Minute (00 - 59).}
		}
		\lignetableau {
		    \casetableau {} {%p}
		    \casetableau {} {AM/PM indicator.}
		}
		\lignetableau {
		    \casetableau {} {%S}
		    \casetableau {} {Seconds (00 - 59).}
		}
		\lignetableau {
		    \casetableau {} {%U}
		    \casetableau {} {Week of year (00 - 52), Sunday is the  first day of the week.}
		}
		\lignetableau {
		    \casetableau {} {%w}
		    \casetableau {} {Weekday number (Sunday = 0).}
		}
		\lignetableau {
		    \casetableau {} {%W}
		    \casetableau {} {Week  of year (00 - 52), Monday is the first day of the week.}
		}
		\lignetableau {
		    \casetableau {} {%x}
		    \casetableau {} {Locale specific date format.}
		}
		\lignetableau {
		    \casetableau {} {%X}
		    \casetableau {} {Locale specific time format.}
		}
		\lignetableau {
		    \casetableau {} {%y}
		    \casetableau {} {Year without century (00 - 99).}
		}
		\lignetableau {
		    \casetableau {} {%Y}
		    \casetableau {} {Year with century (e.g. 1990)}
		}
		\lignetableau {
		    \casetableau {} {%Z}
		    \casetableau {} {Time zone name.}
		}

		\lignetableau {
		    \casetableau {} {%D}
		    \casetableau {} {Date as %m/%d/%y.}
		}
		\lignetableau {
		    \casetableau {} {%e}
		    \casetableau {} {Day of month (1 - 31), no leading zeros.}
		}
		\lignetableau {
		    \casetableau {} {%h}
		    \casetableau {} {Abbreviated month name.}
		}
		\lignetableau {
		    \casetableau {} {%n}
		    \casetableau {} {Insert a newline.}
		}
		\lignetableau {
		    \casetableau {} {%r}
		    \casetableau {} {Time as %I:%M:%S %p.}
		}
		\lignetableau {
		    \casetableau {} {%R}
		    \casetableau {} {Time as %H:%M.}
		}
		\lignetableau {
		    \casetableau {} {%t}
		    \casetableau {} {Insert a tab.}
		}
		\lignetableau {
		    \casetableau {} {%T}
		    \casetableau {} {Time as %H:%M:%S.}
		}
	    }
	}

	Exemple~:
	    \retrait {\verbatim {%d/%m/%Y %Hh%M}}

    \titre {2} {\ancre {jourfmt} {Format d'affichage des jours}}

	Format d'affichage des dates (sans l'heure).
	Voir ci-dessus pour les paramètres de format.

	Exemple~:
	    \retrait {\verbatim {%a %d %b %Y}}

