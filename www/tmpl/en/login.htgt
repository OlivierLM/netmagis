{
\modele {texte}

\set {auteur} {pda/jean}
\set {date}   {11/04/2014}

\*******************************************************************************
\partie {banniere} {
    Netmagis - Login
}

\*******************************************************************************
\partie {titrepage} {
    Netmagis application
}


\*******************************************************************************
\bandeau {
	Netmagis v%VERSION%
    } {
	\elementbandeau {Session} {
	    <li>\lien {Logged as %LOGGEDAS%} {profile}</li>
	    <li>\lien {Disconnect} {login?logout=yes}</li>
	}
	\elementbandeau {Actions} {
	    %LINKS%
	}
}

\*******************************************************************************
\partie {texte} {

    \titre {1} {Login}

    <FONT COLOR="#FF0000">%MESSAGE%</FONT>

    <FORM METHOD="POST" ACTION="%URLFORM%">
	\tableau {
	    \bordure {0} {}
	} {
	    \casedefauttableau {\centragehorizontal {LEFT}}
	    \casedefauttableau {\centragehorizontal {LEFT}}
	} {
	    \lignetableau {
		\casetableau {} {Login}
		\casetableau {} {<INPUT TYPE="TEXT" NAME="login" SIZE="30" VALUE="%LOGIN%">}
	    }
	    \lignetableau {
		\casetableau {} {Password}
		\casetableau {} {<INPUT TYPE="PASSWORD" NAME="pw" SIZE="30">}
	    }
	    \lignetableau {
		\multicasetableau {2} {
		    \centragehorizontal {CENTER}
		} {
		    <INPUT TYPE="HIDDEN" NAME="script" VALUE="%SCRIPT%">
		    <INPUT TYPE="HIDDEN" NAME="param" VALUE="%PARAM%">
		    <INPUT TYPE="SUBMIT" VALUE="Sign in">
		}
	    }
	}
    </FORM>
}

}
